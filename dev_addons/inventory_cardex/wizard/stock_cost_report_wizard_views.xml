<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para el wizard de reportes -->
    <record id="view_stock_cost_report_wizard_form" model="ir.ui.view">
        <field name="name">stock.cost.report.wizard.form</field>
        <field name="model">stock.cost.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generar Reporte de Costos">
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                        <field name="report_type" widget="radio"/>
                    </group>
                    <group>
                        <field name="product_ids" widget="many2many_tags"/>
                        <field name="location_ids" widget="many2many_tags"/>
                        <field name="include_zero_cost"/>
                    </group>
                </group>
                
                <notebook>
                    <page string="Ayuda">
                        <group>
                            <div class="alert alert-info" role="alert">
                                <h4>Instrucciones:</h4>
                                <ul>
                                    <li><strong>Reporte PDF:</strong> Genera un documento PDF profesional con los datos de costos</li>
                                    <li><strong>Exportar Excel:</strong> Descarga los datos en formato Excel (.xlsx) para analisis adicional</li>
                                    <li><strong>Filtros:</strong> Puedes filtrar por productos o ubicaciones especificas</li>
                                    <li><strong>Costo cero:</strong> Activa la opcion para incluir productos sin costo asignado</li>
                                </ul>
                            </div>
                        </group>
                    </page>
                </notebook>
                
                <footer>
                    <button name="action_generate_report" 
                            string="Generar Reporte" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancelar" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Accion para abrir el wizard -->
    <record id="action_stock_cost_report_wizard" model="ir.actions.act_window">
        <field name="name">Reporte de Costos</field>
        <field name="res_model">stock.cost.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="stock.model_stock_move"/>
    </record>

    <!-- Menu para acceder al reporte -->
    <menuitem id="menu_stock_cost_report"
              name="Reporte de Costos"
              parent="stock.menu_stock_warehouse_mgmt"
              action="action_stock_cost_report_wizard"
              sequence="100"/>

</odoo>
